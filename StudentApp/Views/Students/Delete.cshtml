@model StudentApp.Models.Student

@{
    ViewData["Title"] = "Delete";
}



<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Url.Content(Model.Usn) Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
    <p class="alert-danger">Are you sure you want to delete this?</p>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
