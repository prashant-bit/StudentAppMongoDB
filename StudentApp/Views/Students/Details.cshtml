@model StudentApp.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Url.Content(Model.Usn) Photo" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        @if (Model.Subject != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject)
            </dd>
        }
        @if (Model.State != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
        }

        @if (Model.Contact_Number != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contact_Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact_Number)
            </dd>
        }

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
